@model ShoppingCartMVC.Models.tblUser
@{
    ViewBag.Title = "UserDetails";
}

<h2>My Details</h2>

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <input type="hidden" name="id" value="@Model.UserId" />
            <img src="~/Uploads/@Model.Image" style="height:250px;width:100%" />
        </div>

        <div class="col-lg-6">
            <h3>@Model.Name</h3>
            <p>@Model.Email</p>

            @if (Model.RoleType != 2)
            {
                <p><h2><strong>@Model.Rating</strong></h2></p>
                <p>Tips <strong>@Model.Tips</strong></p>
            }
        </div>

        <div>
            <p><a href="@Url.Action("EditAccount", "Account", new { id = Model.UserId})" class="btn btn-primary">Edit</a></p>

        </div>
    </div>
</div>
