@model ShoppingCartMVC.Models.WaiterRatingVM
<head>
    <title>Turbo Meals Waiter Rating</title>
    <style>
        .card {
            border: 3px solid #04d47a;
        }

        .form-group {
            text-align: center;
        }

        .checkbox-grid {
            display: grid;
            grid-template-columns: repeat(3, 2fr);
            gap: 10px;
        }
    </style>
</head>

<br />

<h2 class="card-title" style="text-align:center"><u> Rate </u></h2>
<div class="col-sm-6 mx-auto">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("WaiterRating", "Account", FormMethod.Post))
            {
                <div class="form-horizontal">
                    <hr />
                    <div class="col-lg-6 mx-auto">
                        <img src="~/Uploads/@Model.WaiterImage" style="height:250px;width:100%" />
                    </div>

                    <div class="col-lg-6">
                        <h3>@Model.WaiterName</h3>
                        <p>@Model.WaiterEmail</p>

                        <p>Current Avg Rating: <h2><strong>@Model.WaiterAvgRating</strong></h2></p>
                    </div>

                    <div class="form-group">
                        <span>Your Rating:</span>
                        <div class="radio-group">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <label>
                                    @Html.RadioButtonFor(model => model.rating, i) &ensp;
                                    @i
                                    &ensp; &ensp;
                                </label>

                            }
                        </div>
                    </div>

                    <div class="form-group">
                        <span>Your Tip:</span>
                        <div class="radio-group">
                            @Html.RadioButtonFor(model => model.IsCustomTip, true) Custom Amount
                            <br />
                            @Html.RadioButtonFor(model => model.IsCustomTip, false) No Tip
                            @Html.TextBoxFor(model => model.CustomTip, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group" style="display: flex;">
                        <input type="submit" value="Proceed" class="btn btn-success" />
                        &ensp;
                        <a href="@Url.Action("Index", "Home")" class="btn btn-dark">Home</a>
                    </div>
                </div>
                <p>@TempData["msg"]</p>
            }
        </div>
    </div>
</div>

<br />
<br />
<br />

