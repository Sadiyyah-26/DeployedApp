@model ShoppingCartMVC.Models.tblSupplier

<head>
    <title>Update Supplier</title>
    <style>
        .card {
            border: 2px solid grey;
        }

        .form-group {
            text-align: center;
        }

        .checkbox-grid {
            display: grid;
            grid-template-columns: repeat(3, 2fr); /* Adjust the number of columns as needed */
            gap: 10px; /* Adjust the gap between checkboxes */
        }

        input[type="checkbox"] {
            width: 20px; /* Adjust the width to make the checkbox wider */
            height: 20px; /* Adjust the height to make the checkbox taller */
        }

        .custom-orange-button {
            background-color: orange; /* Set your desired shade of orange */
            color: white; /* Set the text color to contrast with the background */
            font-size: 20px; /* Set the font size to your preference */
            font-weight: bold; /* Make the text bold if desired */
            border: none;
        }

            .custom-orange-button:hover {
                background-color: darkorange;
                color: white;
            }

        .btn-dark {
            font-size: 20px;
            font-weight: bold;
        }
    </style>
</head>
<br />

<h1 class="card-title" style="text-align:center"><u> Update Supplier </u></h1>
<div class="col-sm-7 mx-auto">
    <div class="card">
        <div class="card-body">
            <br />
            <h3 style="color:red;">@TempData["msg"]</h3>
            @using (Html.BeginForm())
            {

                <div class="form-horizontal">


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.SupplierId)

                    <div class="form-group">
                        Supplier Name:
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SupplName, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="form-group">
                        Supplier Type:
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SupplType, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="form-group">
                        Supplier Contact Person:
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ContactPerson, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="form-group">
                        Supplier Contact Person Position:
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ContactPersonPos, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="form-group">
                        Contact Number:
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ContactNum, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="form-group">
                        Email:
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="form-group">
                        Telephone:
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Tel, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="form-group">
                        Company Registration Number:
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CompanyRegNum, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="form-group">
                        Physical Address:
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PhysicalAddress, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Active, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Active, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>
                    <br />


                    <div class="checkbox-grid">
                        <h4>Ingredients:</h4>
                        @foreach (var ing in ViewBag.AllIngredients)
                        {

                            <div class="form-group">
                                <label>
                                    <input type="checkbox" name="selectedIngrs[]" value="@ing.Ing_ID" @(ViewBag.SelectedIngredientIds.Contains(ing.Ing_ID) ? "checked" : "") />
                                    @ing.Ing_Name
                                </label>
                                <br />
                            </div>
                        }
                    </div>
                    <br />

                    <div class="form-group">
                       
                    </div>

                    <div class="form-group" style="text-align:center;">

                        <input type="submit" value="Update" class="btn custom-orange-button  py-3 px-5" style="display: inline-block;" />
                        <p style="display: inline; margin-left: 10px;">
                            <a href="@Url.Action( "Index","Supplier")" class="btn btn-dark  py-3 px-5">Back</a>
                        </p>
                    </div>
                </div>

            }

            

        </div>
    </div>
</div>

<br />
<br />
<br />
