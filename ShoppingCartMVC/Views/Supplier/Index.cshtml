@model IEnumerable<ShoppingCartMVC.Models.tblSupplier>

<head>
    <title>Suppliers List</title>
    <style>
        h1{
            text-align:center;
        }

        .btn-danger {
            font-size: 20px;
            font-weight: bold;
        }

        .btn-info {
            font-size: 20px;
            font-weight: bold;
        }
    </style>
</head>
<script src="~/js/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $("#searchBox").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>

<br />
<h1>All Suppliers</h1>
<div class="container">

    <div class="form-group">
        <input type="text" class="form-control col-lg-4 ml-auto" placeholder="Search Here" id="searchBox" />
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Type</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="myTable">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SupplierId</td>
                    <td>@item.SupplName</td>
                    <td>@item.SupplType</td>
                    <td>

                        <a href="@Url.Action("Details", "Supplier", new { id = item.SupplierId})" class="btn btn-info">Details</a>

                        <a href="@Url.Action("Edit", "Supplier", new { id = item.SupplierId})" class="btn btn-info">Edit</a>
                        <a href="@Url.Action("Delete", "Supplier", new { id = item.SupplierId})" class="btn btn-danger">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>


</div>
<br />
<br />

