@model IEnumerable<ShoppingCartMVC.Models.tblSupplier>

<head>
    <title>All Suppliers</title>

</head>
<script src="~/js/jquery.min.js"></script>

<script>
$(document).ready(function(){
    $("#searchBox").on("keyup", function () {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>


<div class="container">
    <h2>View Suppliers</h2>
    <div class="form-group">
        <input type="text" class="form-control col-lg-4 ml-auto" placeholder="Search Here" id="searchBox" />
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="myTable">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SupplierId</td>
                    <td>@item.Name</td>
                    <td>
                        <a href="@Url.Action("Edit", "Supplier", new { id = item.SupplierId})" class="btn btn-info">Edit</a>
                        <a href="@Url.Action("Delete", "Supplier", new { id = item.SupplierId})" class="btn btn-danger">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>


</div>


