@model ShoppingCartMVC.Models.tblSupplier
<head>
    <title>Add Supplier</title>
    <style>
        .card {
            border: 2px solid #00ff90;
        }

        .form-group {
            text-align: center;
        }
    </style>
</head>
<br />

<h2 class="card-title" style="text-align:center"><u> Add Supplier </u></h2>
<div class="col-sm-6 mx-auto">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm())
            {


                            <form class="bg-white p-5 contact-form">
                                <div class="form-group">
                                    <span>Name:</span>
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Add Supplier" class="btn btn-primary py-3 px-5">
                                </div>
                            </form>
                            <h3 style="color:red;">@TempData["msg"]</h3>

                      
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
</div>

<br />
