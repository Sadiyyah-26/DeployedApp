
@model ShoppingCartMVC.Models.tblProduct
<head>
    <title>Qty Order</title>
    <style>
        .card {
            border: 2px solid #00ff90;
        }

        .form-group {
            text-align: center;
        }
    </style>
</head>

<h2 class="card-title" style="text-align:center"><u>Quantity Order </u></h2>
<div class="col-sm-6 mx-auto">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">

                        Supplier  @Html.DisplayFor(m => m.tblSupplier.Name)
                    </div>

                    <div class="form-group">
                        Product @Html.DisplayFor(m => m.P_Name)

                    </div>

                    <div class="form-group">
                        Qty to order:
                        <input type="text" name="qtyOrder" id="qtyOrder" required />

                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>

        </div>
    </div>
</div>

<br />
<br />
<br />
