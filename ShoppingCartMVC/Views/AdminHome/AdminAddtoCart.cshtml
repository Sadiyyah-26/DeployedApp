@model ShoppingCartMVC.Models.tblIngredients


<div class="container">

    @using (Html.BeginForm())
    {


        <div class="row">
            <div class="col-lg-6">
                <input type="hidden" name="id" value="@Model.Ing_ID" />
                <img src="~/Uploads/@Model.Ing_Image" style="height:250px;width:100%" />
            </div>

            <div class="col-lg-6">
                <h3>@Model.Ing_Name</h3>


                <p>Rs. <strong>@TempData["unit"]</strong></p>
                <p><strong>Available: @Model.Ing_StockyQty</strong></p>
                <input type="number" min="1" max="200" name="qty" />
                <input type="submit" value="Add to Cart" class="btn btn-warning" />
            </div>

        </div>

    }
</div>

