@model List<ShoppingCartMVC.Models.StockOrdersWithIngrVM>
<head>
    <title>Supplier Ordered</title>
</head>
<br />
<h2>Ordered Stock with Supplier</h2>

<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th>Invoice No #</th>
            <th>Ingredients</th>
            <th>Supplier Name</th>
            <th>Order Date</th>
            <th>Invoice</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.InvoiceId</td>
                <td>
                    <ul>
                        @foreach (var ingredient in item.Ingredients)
                        {
                            <li>@ingredient</li>
                        }
                    </ul>
                </td>
                <td>@item.SupplierName</td>
                <td>@item.OrderDate</td>
                <td>
                    <a href="@Url.Action("AdminInvoice", "AdminHome", new { InvID = item.InvoiceId })" class="btn btn-primary">View</a>
                </td>
                <td>
                    <a href="@Url.Action("SupplierConfirmOrder", "AdminHome", new { InvoiceID = item.InvoiceId })" class="btn btn-info">Receiving Checklist</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<br />
