@*showing cart item with conditions*@
<head>
    <title>
        Supplier Checkout
    </title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<div class="container">
    @if (TempData["admintotal"] == null)
    {
        <h1>cart is empty</h1>
        <a href="@Url.Action("Index","AdminHome", new { id = TempData["sId"] })">go back</a>
    }
    else
    {

        <div class="row">

            <div class="col-md-12 ftco-animate fadeInUp ftco-animated">
                <div class="cart-list">
                    <h3>Total Item : @TempData["admin_item_count"]</h3>
                    <table class="table">
                        <thead class="thead-primary">
                            <tr class="text-center">

                                <th></th>
                                @*<th>ID</th>*@
                                <th>Ingredient Name</th>
                                <th>Price</th>
                                <th>Qty</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in TempData["admincart"] as List<ShoppingCartMVC.Models.AdminCart>)
                            {


                                <tr class="text-center">
                                    <td class="product-remove"><a href="@Url.Action("remove", "AdminHome", new { id = item.ingrid })"><span class="fa fa-remove fa-1x"></span></a></td>
                                    @*<td class="product-name">
                                        <h3>@item.ingrid</h3>
                                    </td>*@

                                    <td class="product-name">
                                        <h3>@item.ingrname</h3>

                                    </td>

                                    <td class="price">R @item.price.00</td>

                                    <td class="quantity">
                                        @item.qty
                                    </td>

                                    <td class="total">R @item.bill .00</td>
                                </tr><!-- END TR-->
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <div class="row justify-content-end">


            <div class="col-lg-4 mt-5 cart-wrap ftco-animate fadeInUp ftco-animated">
                <div class="cart-total mb-3">
                    <h3>Cart Total</h3>


                    <hr>
                    <p class="d-flex total-price">
                        <span>Total</span>
                        <span>R @TempData["admintotal"].00</span>
                    </p>
                </div>



            </div>
        </div>
    }


    @*show checkout button as per user rights*@

    @if (!User.Identity.IsAuthenticated)
    {
        <a href="@Url.Action("Login","Account")" class="btn btn-primary py-3 px-4">Login</a>
        <a href="@Url.Action("Register","Account")" class="btn btn-primary py-3 px-4">Register</a>
    }

    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("4"))
        {

            if (TempData["admincart"] != null)
            {
                using (Html.BeginForm())
                {

                    <span>Contact :</span> <input type="text" name="contact" class="form-control col-lg-6" maxlength="10"/>
                    <br />
                    <span>Address :</span><textarea name="address" class="form-control col-lg-6"></textarea>
                    <br />
                    <input type="submit" value="Checkout" class="btn btn-primary py-3 px-4" />
                }
            }


        }
    }


</div>
