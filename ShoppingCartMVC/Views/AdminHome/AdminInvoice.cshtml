@model List<ShoppingCartMVC.Models.AdminInv_VM>

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />

    <style>
        body {
            margin-top: 10px;
            background-color: #eee;
        }

        .card {
            box-shadow: 0 20px 27px 0 rgb(0 0 0 / 5%);
        }

        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 0 solid rgba(0,0,0,.125);
            border-radius: 1rem;
        }

        @@media print {
            /*.btn {
                display: none;
            }
*/
            .footer {
                display: none;
            }
        }
    </style>
</head>
@*invoice code to go here*@

@{
    double grandTotal = 0; 
}
<br />
<br />
@foreach (var item in Model)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="invoice-title">
                            <h4 class="float-end font-size-15">Invoice # @Html.DisplayFor(modelItem => item.InvoiceId) <span class="badge bg-success font-size-12 ms-2">Paid</span></h4>
                            <div class="mb-4">
                                <h2 class="mb-1 text-muted">TURBO MEALS</h2>
                            </div>
                            <div class="text-muted">
                                <p class="mb-1">@Html.DisplayFor(modelItem => item.Address)</p>
                                <p><i class="uil uil-phone me-1"></i> @Html.DisplayFor(modelItem => item.Contact) </p>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="text-muted">
                                    <h5 class="font-size-16 mb-3">Billed To:</h5>
                                    <h5 class="font-size-15 mb-2">@Html.DisplayFor(modelItem => item.ContactPerson) - @Html.DisplayFor(modelItem => item.ContactPersonPos)</h5>
                                    <p class="mb-1">@Html.DisplayFor(modelItem => item.ContactNum)</p>
                                    <p class="mb-1">@Html.DisplayFor(modelItem => item.Email) </p>
                                    <p>@Html.DisplayFor(modelItem => item.Tel)</p>
                                    <p class="mb-1"><i class="uil uil-envelope-alt me-1"></i> @Html.DisplayFor(modelItem => item.PhysicalAddress)</p>
                                </div>
                            </div>
                            <!-- end col -->
                            <div class="col-sm-6">
                                <div class="text-muted text-sm-end">
                                    <div>
                                        <h5 class="font-size-15 mb-1">Invoice Date:</h5>
                                        <p>@Html.DisplayFor(modelItem => item.InvoiceDate) </p>
                                    </div>
                                    <div class="mt-4">
                                        <h5 class="font-size-15 mb-1">Order No:</h5>
                                        <p>@Html.DisplayFor(modelItem => item.OrderId)</p>
                                    </div>
                                    <div class="mt-4">
                                        <h5 class="font-size-15 mb-1">Order Date:</h5>
                                        <p>@Html.DisplayFor(modelItem => item.OrderDate) </p>
                                    </div>
                                    <div class="mt-4">
                                        <h5 class="font-size-15 mb-1">Order Date:</h5>
                                        <p>@Html.DisplayFor(modelItem => item.Name) </p>
                                    </div>

                                </div>
                            </div>
                            <!-- end col -->
                        </div>
                        <!-- end row -->

                        <div class="py-2">
                            <h5 class="font-size-15">Order Summary</h5>

                            <div class="table-responsive">


                                <table class="table align-middle table-nowrap table-centered mb-0">
                                    <thead>
                                        <tr>
                                            <th style="width: 60px;">Order No.</th>
                                            <th>Item</th>
                                            <th>Price</th>
                                            <th>Quantity</th>
                                            <th class="text-end" style="width: 120px;">Sub-Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var order in item.Items)
                                        {

                                            <tr>
                                                <th scope="row">@order.OrderId</th>
                                                <td>
                                                    <div>
                                                        <h5 class="text-truncate font-size-14 mb-1">@order.Ing_Name</h5>
                                                    </div>
                                                </td>
                                                <td>@order.Unit</td>
                                                <td>@order.Qty</td>
                                                <td>@order.Total</td>

                                            </tr>
                                            {

                                                grandTotal += (double)order.Total;
                                            }
                                        }
                                    </tbody>
                                </table>

                            </div> <!-- end of table responsiveness -->
                            <h2>
                                Total Amount: R @grandTotal.00
                            </h2>
                            <div class="d-print-none mt-4">
                                <div class="float-end">
                                    <a href="javascript:window.print()" class="btn btn-success me-1"><i class="fa fa-print"></i></a>
                                    @*<a href="#" class="btn btn-primary w-md">Send</a>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- end col -->
        </div>
    </div>
    <br />
    <br />
}
