@model IEnumerable<ShoppingCartMVC.Models.tblProduct>
<head>
    <title>Low Stock</title>
    <style>
        .card {
            border: 2px solid #00ff90;
        }

        .form-group {
            text-align: center;
        }
    </style>
</head>
<script src="~/js/jquery.min.js"></script>

<script>
$(document).ready(function(){
    $("#searchBox").on("keyup", function () {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
<br />
<h2>Low Stock</h2>
<br />
<table class="table">
    <thead>
        <tr>
            @*<th>ID</th>*@
            <th>Supplier</th>
            <th>Product Name</th>
            <th>Category</th>
            <th>Description</th>
            <th>Unit Price</th>
            <th>Image</th>
            <th>Qty Remaining</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                @*<td>@item.ProID</td>*@
                <td>@(item.tblSupplier != null ? item.tblSupplier.Name : "N/A")</td>
                <td>@item.P_Name</td>
                <td>@item.tblCategory.Name</td>
                <td>@item.Description</td>
                <td>@item.Unit</td>
                <td><img src="~/Uploads/@item.Image" style="width:150px; height:100px;" /></td>
                <td>@item.Qty</td>
                <td>
                    <a href="@Url.Action("Create", "tblSupplierOrders", new { id = item.ProID })" class="btn btn-success">Stock Up</a>
                </td>
            </tr>
        }
    </tbody>
</table>
