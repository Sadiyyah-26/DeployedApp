@model ShoppingCartMVC.Models.tblExtras
<head>
    <title>Add New Extra</title>
    <style>
        .card {
            border: 2px solid grey;
        }

        .form-group {
            text-align: center;
        }

        .custom-orange-button {
            background-color: orange; /* Set your desired shade of orange */
            color: white; /* Set the text color to contrast with the background */
            font-size: 20px; /* Set the font size to your preference */
            font-weight: bold; /* Make the text bold if desired */
            border: none;
        }

            .custom-orange-button:hover {
                background-color: darkorange;
                color: white;
            }
    </style>
</head>

<br />
<h2 class="card-title" style="text-align:center"><u> Add Extras </u></h2>
<br />
<h3 style="color:red;">@TempData["msg"]</h3>
<br />
<div class="col-sm-6 mx-auto">
    <div class="card">
        <div class="card-body">

            @using (Html.BeginForm())
            {
                <div class="bg-white p-5 contact-form">
                    <div class="form-group">
                        <span>Name:</span>
                        <div class="text">
                            @Html.TextBoxFor(m => m.exName, new { @class = "form-control", required = "required" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <span>Unit Price:</span>
                        @Html.TextBoxFor(m => m.exCost, new { @class = "form-control", required = "required" })
                    </div>
                    <br />
                    <div class="form-group">
                        <span>Category:</span>
                        @Html.DropDownListFor(m => m.CatId, ViewBag.CatList as SelectList, "-- Select Category ---", new { @class = "form-control", required = "required" })
                    </div>
                    <br />

                    <div class="form-group">
                        <input type="submit" value="Add Extra" class="btn custom-orange-button  py-3 px-5">
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<br />

