@model IEnumerable<ShoppingCartMVC.Models.tblExtras>

@{
    ViewBag.Title = "ExIndex";
}
<head>
    <title>All Extras</title>
    <style>
        .btn-info {
            font-size: 20px;
            font-weight: bold;
        }

        .btn-danger {
            font-size: 20px;
            font-weight: bold;
        }
    </style>
</head>
<script src="~/js/jquery.min.js"></script>

<script>
$(document).ready(function(){
    $("#searchBox").on("keyup", function () {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
<br />
<div class="container">
    <h2 >View Extras</h2>
    <div class="form-group">
        <input type="text" class="form-control col-lg-4 ml-auto" placeholder="Search Here" id="searchBox" />
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Unit Price</th>
                <th>Category</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="myTable">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ExtraID</td>
                    <td>@item.exName</td>
                    <td>@item.exCost</td>
                    <td>@item.tblCategory.Name</td>
                    <td>
                        <a href="@Url.Action("ExEdit", "Products", new { id = item.ExtraID})" class="btn btn-info">Edit</a>
                        <a href="@Url.Action("ExDelete", "Products", new { id = item.ExtraID })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>

