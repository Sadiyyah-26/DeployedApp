@model IEnumerable<ShoppingCartMVC.Models.tblDonations>
@{
    ViewBag.Title = "DonationDetails";
}
<head>
    <title>Donations List</title>
    <style>
        h1{
            text-align:center;
        }
        .orange-link {
            color: orange;
            font-size: 20px; /* Increase the font size to your desired value */
            font-weight: bold; /* Make the text bold */
            text-decoration: none; /* Remove the underline (if needed) */
        }

            .orange-link:hover {
                color: orangered;
            }

    </style>
</head>

<br />
<h1>Donation List</h1>
<br />
<br />
<table class="table">
    <tr>
        <th>
            Donation Organization
        </th>
        <th>
            Email
        </th>
        <th>
            Donation Amount
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DonCharityOrg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonEmail)
            </td>
            <td>
                R @Html.DisplayFor(modelItem => item.DonationAmount)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.DonationId }, new { @class = "orange-link" })
            </td>
        </tr>
    }

</table>
<br />
<br />