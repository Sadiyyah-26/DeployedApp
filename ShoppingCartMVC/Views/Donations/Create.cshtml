@model ShoppingCartMVC.Models.tblDonations
<head>
    <title>Make Donation</title>

    <style>
        .card {
            border: 2px solid grey;
            text-align: center;
        }

        h1 {
            text-align: center;
            background-color: rgb(255, 106, 0);
            color: #fff;
            margin: 0;
            padding: 15px;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .custom-orange-button {
            background-color: orange; /* Set your desired shade of orange */
            color: white; /* Set the text color to contrast with the background */
            font-size: 20px; /* Set the font size to your preference */
            font-weight: bold; /* Make the text bold if desired */
            border: none;
        }

            .custom-orange-button:hover {
                background-color: darkorange;
                color: white;
            }

        .btn-dark {
            font-size: 20px;
            font-weight: bold;
        }
    </style>

</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1 style="text-align:center">Make A Donation Today</h1>
        <br />
        <div class="col-sm-6 mx-auto">
            <div class="card">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-10">
                        Select Donation Organization:
                        <br />

                        <div class="r-md-10">

                            @Html.RadioButtonFor(model => model.DonCharityOrg, "Village of Peace")
                            Village of Peace
                        </div>
                        <div class="r-md-10">

                            @Html.RadioButtonFor(model => model.DonCharityOrg, "Meals on Wheels")
                            Meals on Wheels
                        </div>
                        <div class="r-md-10">

                            @Html.RadioButtonFor(model => model.DonCharityOrg, "World Food Program")
                            World Food Program
                        </div>
                        @Html.ValidationMessageFor(model => model.DonCharityOrg, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="form-group">

                    <div class="col-md-10">
                        Your Email Address
                        @Html.EditorFor(model => model.DonEmail, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DonEmail, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="form-group">

                    <div class="col-md-10">
                        Donation Amount
                        @Html.EditorFor(model => model.DonationAmount, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DonationAmount, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="form-group" style="text-align:center;">

                    <input type="submit" value="Make Donation" class="btn custom-orange-button  py-3 px-5" style="display: inline-block;" />
                    <p style="display: inline; margin-left: 10px;">
                        <a href="@Url.Action( "Index","Donations")" class="btn btn-dark  py-3 px-5">Back</a>
                    </p>
                </div>


            </div>
        </div>
    </div>
}


