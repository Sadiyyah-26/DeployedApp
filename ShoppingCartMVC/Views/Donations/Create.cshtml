@model ShoppingCartMVC.Models.tblDonations
<head>
    <title>Make Donation</title>

    <style>
        .card {
            border: 2px solid green;
            text-align:center;
        }
    </style>

</head>
    @{
        ViewBag.Title = "Create";
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4 style="text-align:center" class="bg-primary text-white">Make A Donation Today</h4>

    <div class="col-sm-6 mx-auto">
        <div class="card">


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    Donation Organization
                    <br />
                   
                    <div class="r-md-10">

                        @Html.RadioButtonFor(model => model.DonCharityOrg, "Village of Peace")
                        Village of Peace
                    </div>
                    <div class="r-md-10">

                        @Html.RadioButtonFor(model => model.DonCharityOrg, "Meals on Wheels")
                        Meals on Wheels
                    </div>
                    <div class="r-md-10">

                        @Html.RadioButtonFor(model => model.DonCharityOrg, "World Food Program")
                        World Food Program
                    </div>
                    @Html.ValidationMessageFor(model => model.DonCharityOrg, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    Your Email Address
                    @Html.EditorFor(model => model.DonEmail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DonEmail, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    Donation Amount
                    @Html.EditorFor(model => model.DonationAmount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DonationAmount, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Make Donation" class="btn btn-primary text-white" />
                </div>
            </div>
        </div>
      </div>
    </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

