@model ShoppingCartMVC.Models.tblRefund


<head>
    <title>Refund Request Reply</title>
    <style>
        .card {
            border: 2px solid grey;
        }
        .custom-orange-button {
            background-color: orange; /* Set your desired shade of orange */
            color: white; /* Set the text color to contrast with the background */
            font-size: 20px; /* Set the font size to your preference */
            font-weight: bold; /* Make the text bold if desired */
            border: none;
        }

            .custom-orange-button:hover {
                background-color: darkorange;
                color: white;
            }

        .btn-dark {
            font-size: 20px;
            font-weight: bold;
        }
    </style>
</head>

<br />
<br />
<h1 class="card-title" style="text-align:center"><u>Refund Request Reply</u></h1>
<div class="col-lg-5 grid-margin stretch-card mx-auto">
    <div class="card">
        <div class="card-body">
            

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.RefundId)

            <div class="form-group">

                <div class="col-md-10">
                    Order Number: <b> #@Html.DisplayFor(model => model.OrderId, new { htmlAttributes = new { @class = "form-control" } })</b>
                    @Html.ValidationMessageFor(model => model.OrderId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    Email Address: <b>@Html.DisplayFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control" } })</b>
                    @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    Refund Request Date:  <b>@Html.DisplayFor(model => model.RefundRequestDate, new { htmlAttributes = new { @class = "form-control" } })</b>
                    @Html.ValidationMessageFor(model => model.RefundRequestDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    Refund Reason: <b>@Html.DisplayFor(model => model.RefundReason, new { htmlAttributes = new { @class = "form-control" } })</b>
                    @Html.ValidationMessageFor(model => model.RefundReason, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    Image Proof:
                    <img src="~/Uploads/@Model.Image" style="width:150px; height:100px;" />
                </div>
            </div>

            <div class="form-group">

                <div class="card col-lg-9 grid-margin">
                    <div class="card-body">
                        <p style="text-align:center;"><b>Refund Status: </b></p>
                        <p>@Html.RadioButtonFor(s => s.RefundStatus, "Successful") Accept Request</p>
                        <p>@Html.RadioButtonFor(s => s.RefundStatus, "Unsuccessful") Decline Request</p>
                    </div>
                </div>
            </div>
            <br />

            <div class="form-group" style="text-align:center;">

                <input type="submit" value="Send Reply" class="btn custom-orange-button  py-3 px-5" style="display: inline-block;" />
                <p style="display: inline; margin-left: 10px;">
                    <a href="@Url.Action("Index","tblRefunds")" class="btn btn-dark  py-3 px-5">Back</a>
                </p>
            </div>

           
        </div>
            }

           
        </div>
     </div>
</div>
<br />
<br />