@model IEnumerable<ShoppingCartMVC.Models.tblProduct>

<head>
    <style>
        .proName {
            font-size: 18px !important;
            font-weight:500 !important;
        }
        h1{
            font-weight:bold;
        }

        .price-sale {
            font-weight: 400 !important;
        }
    </style>
</head>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" />
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-3 pb-3">
            <div class="col-md-12 heading-section text-center ftco-animate fadeInUp ftco-animated">
                
                <h1 class="mb-4">Menu</h1>
                <p>
                    A fast-food restaurant that provides delectable hot and cold delicacies in a snap without
                    compromising on taste, quality or quantity.
                </p>
            </div>
        </div>
    </div>
    <script src="~/js/jquery.min.js"></script>



    <script>
        $(document).ready(function () {



            $("#searchBox").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#result .col-md-6").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
    <div class="container">
        <div class="form-group">
            <input type="text" class="form-control col-lg-4 ml-auto" placeholder="Search Here" id="searchBox" />
        </div>

        <br />

        <div class="row" id="result">





            @foreach (var item in Model)
            {




                <div class="col-md-6 col-lg-3 ftco-animate fadeInUp ftco-animated">
                    <div class="product">
                        <a href="@Url.Action("AddtoCart", "Home", new { id = @item.ProID })" class="img-prod">
                            <img class="img-fluid" src="~/Uploads/@item.Image" style="height:250px" alt="Colorlib Template">



                            <div class="overlay"></div>
                        </a>
                        <div class="text py-3 pb-4 px-3 text-center">



                            <h3 class="proName"><a href="#">@item.P_Name</a></h3>
                            <div class="d-flex">
                                <div class="pricing">
                                    <p class="price"><span class="mr-2 price-dc"></span><span class="price-sale">R @item.Unit</span></p>
                                </div>
                            </div>
                            <div class="bottom-area d-flex px-3">
                                <div class="m-auto d-flex">
                                    <a href="#" class="add-to-cart d-flex justify-content-center align-items-center text-center">
                                        <span><i class="fa fa-heart"></i></span>
                                    </a>



                                    <a href="@Url.Action("AddtoCart", "Home", new { id = @item.ProID })" class="heart d-flex justify-content-center align-items-center">
                                        <span><i class="fa fa-shopping-cart"></i></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>