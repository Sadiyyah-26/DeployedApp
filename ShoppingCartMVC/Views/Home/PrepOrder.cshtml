
@model ShoppingCartMVC.Models.tblOrder



<br />
<div class="card">
    <div class="card-body">
        <h4 class="card-title" style="text-align:center"><u> Order Information </u></h4>
        @using (Html.BeginForm("PrepOrder", "Home", FormMethod.Post))
        {
            <br />
            <p style="text-align:center;">Order No. : <b>#@Html.DisplayFor(model => Model.OrderId)</b></p>
            <p style="text-align:center;"> Order : @Html.DisplayFor(model => model.TblProduct.P_Name) x @Html.DisplayFor(model => model.Qty)</p>
            <br />
            <p><input type="checkbox" id="Ready" name="Ready" value="true" required /> Order Ready</p>

            <p style="text-align:center;"><input type="submit" value="Ready" class="btn btn-success" /></p>
        }
    </div>
</div>
<br />
<br />

