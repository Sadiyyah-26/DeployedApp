<!DOCTYPE html>
<html>
<head>
    <title>In-Store Success (Cash)</title>
    <style>
        /* Add your CSS styles for the receipt here */
        body {
            font-family: Arial, sans-serif;
        }

        .receipt {
            width: 300px;
            margin: 0 auto;
            text-align: center;
            border: 1px solid #000;
            padding: 10px;
        }

        .header {
            font-size: 18px;
            font-weight: bold;
        }

        .restaurant-name {
            font-size: 20px;
            margin-top: 10px;
        }

        .address {
            margin-top: 5px;
        }

        .contact-details {
            margin-top: 5px;
        }

        .waiter-name {
            font-weight: bold;
            margin-top: 10px;
        }

        .item {
            text-align: left;
            margin: 5px 0;
        }

        .products {
            margin-top: 10px;
        }

        .product-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 5px;
        }

        .total {
            font-weight: bold;
            margin-top: 10px;
        }

        .thank-you {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="receipt">
        <p class="restaurant-name">Turbo Meals</p>
        <p class="address">123 Main Street, City, Country</p>
        <p class="contact-details">Email: info@turbomeals.com | Phone: +123-456-7890</p>
        <hr />
        <p class="header">Receipt</p>
        <p class="waiter-name">Waiter: @Session["User"]</p>
        <p class="item">Order Number: @Model.OrderNumber</p>
        <p class="item">Order Date: @Model.OrderDateTime.ToString("yyyy-MM-dd HH:mm:ss")</p>
        <hr />
        <p class="item">Products:</p>
        <div class="products">
            @foreach (var item in Model.Products)
            {
                <div class="product-item">
                    <span>@item.ProductName</span>
                    <span>@item.Qty - R @item.Total</span>
                </div>
            }
        </div>
        <hr />
        <p class="total">Total Amount: R @Model.TotalAmount</p>
        <p class="thank-you">Thank you for dining with us!</p>
        <button onclick="window.print()">Print Receipt</button>
    </div>
</body>
</html>
