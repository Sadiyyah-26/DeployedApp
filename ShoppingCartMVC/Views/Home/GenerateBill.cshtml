@model ShoppingCartMVC.Models.BillViewModel


<!DOCTYPE html>
<html>
<head>
    <title>Restaurant Receipt</title>
    <style>
        /* Define your CSS styles for the receipt here */
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            display: flex;
            justify-content: space-between;
            width: 100%; /* Adjust the width as needed */
            margin: 0 auto;
        }

        .receipt {
            width: 60%; /* Adjust the width as needed */
            border: 1px solid #000;
            padding: 10px;
        }

        .header {
            text-align: center;
            font-size: 18px;
            margin-bottom: 10px;
        }

        .order-number {
            text-align: center;
            font-size: 16px;
            margin-top: 10px;
        }

        .item {
            margin-bottom: 5px;
        }

        .total {
            text-align: right;
            margin-top: 10px;
            font-weight: bold;
        }

        .receipt-info {
            margin-top: 20px;
        }

        /* Additional styles for payment options */
        .payment-options {
            width: 35%; /* Adjust the width as needed */
            border: 1px solid #000;
            padding: 10px;
        }

            .payment-options h4 {
                text-align: center;
                margin-bottom: 10px;
            }

            .payment-options label {
                display: block;
                margin-bottom: 10px;
            }

            .payment-options button {
                display: block;
                margin-top: 10px;
            }

        .success-button {
            background-color: #4CAF50; /* Green color */
            color: white;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 4px;
            cursor: pointer;
        }

        /* Styles for print media */
        @@media print {
            body {
                margin: 0;
            }

            .container {
                width: 100%;
                margin: 0;
                padding: 20px;
            }

            .receipt {
                width: 100%;
                border: 1px solid #000;
                padding: 10px;
            }

            .receipt-info {
                text-align: center;
                margin-top: 20px;
            }
        }
    </style>
</head>
<body>
    <br />
    <br />
    <br />
    <br />
    <br />

    <div class="container">
        <div class="receipt">
            <h2>Restaurant Receipt</h2>
            <p class="restaurant-name">Turbo Meals</p>
            <p class="address">165 Bayview Road, Park Avenue, Durban, 4087</p>
            <p class="contact-details">
                Email: turbomeals123@gmail.com | Phone: 031-456-2547
            </p>
            <hr />
            <p class="header">Receipt</p>
            <p class="waiter-name">Waiter: @Session["User"]</p>
            <div class="order-number">Order Number: @Model.OrderNumber</div>

            @foreach (var product in Model.Products)
            {
                <div class="item">
                    <span>@product.ProductName</span> &ensp;<span>Quantity: @product.Qty</span>
                    <span style="float:right;">@product.Total</span>
                    <br />
                </div>
            }

            <div class="total">Total: @Model.TotalAmount</div>

            <!-- Add an input field for the amount given -->
            <!--<div class="input-group">
                <label for="amountGiven">Amount Given:</label>
                <input type="text" id="amountGiven" />
            </div>-->
            <!-- Add a label to display the change -->
            <!--<div class="change">Change Due: <span id="changeLabel">0</span></div>-->
            <!-- Add a button to trigger the change calculation -->
            <!--<button onclick="calculateChange()">Calculate Change</button>-->

            <div class="receipt-info">
                <p>Thank you for dining with us!</p>
                <p>Date: @DateTime.Now.ToString("MM/dd/yyyy hh:mm tt")</p>
            </div>
        </div>
        @*<input type="hidden" name="changeDue" value="@Model.ChangeDue" />*@
        <div class="payment-options">
            <form action="@Url.Action("UpdatePaymentMethod", "Home")" method="post">
                <input type="hidden" name="orderNumber" value="@Model.OrderNumber" />

                <h4>Select Payment Method:</h4>
                <label><input type="radio" name="paymentMethod" value="Cash" /> Cash</label>
                <label><input type="radio" name="paymentMethod" value="Card" /> Card</label>

                <br />

                <div class="input-group">
                    <label for="amountGiven">Amount Given:</label>
                    <input type="text" id="amountGiven" name="amountGiven" oninput="calculateChange()" />
                </div>

                <input type="hidden" name="changeDue" value="@Model.ChangeDue" />
                <!-- Add a label to display the change -->
                <div class="change">Change Due: <span id="changeLabel">0</span></div>


                <div class="input-group">
                    <label for="tipAmount">Enter Tip Amount:</label>
                    <input type="text" id="tipAmount" name="tipAmount" />
                </div>


                <br />
                <button type="submit" class="success-button">Submit Payment</button>
            </form>
            <button type="button" onclick="printBill()" class="success-button">Print Bill</button>
            <br />
            <a href="@Url.Action("DineIn", "Home")" class="success-button">Back</a>
        </div>
    </div>
    <script>
        function printBill()
        {
        var printContents = document.querySelector('.receipt').innerHTML;
        var originalContents = document.body.innerHTML;

        document.body.innerHTML = printContents;
        window.print();
        document.body.innerHTML = originalContents;
    }

        function calculateChange()
        {
    var totalAmount = @Model.TotalAmount;
    var amountGiven = parseFloat(document.getElementById('amountGiven').value);
    var change = amountGiven - totalAmount;
    document.getElementById('changeLabel').textContent = change.toFixed(2);

    // Update the hidden input fields
            document.querySelector('input[name="changeDue"]').value = change.toFixed(2);


}
    </script>
</body>
