@model ShoppingCartMVC.Models.BillViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Restaurant Receipt</title>
    <style>
        /* Define your CSS styles for the receipt here */
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            display: flex;
            justify-content: space-between;
            width: 80%; /* Adjust the width as needed */
            margin: 0 auto;
        }

        .receipt {
            width: 60%; /* Adjust the width as needed */
            border: 1px solid #000;
            padding: 10px;
        }

        .header {
            text-align: center;
            font-size: 18px;
            margin-bottom: 10px;
        }

        .order-number {
            text-align: center;
            font-size: 16px;
            margin-top: 10px;
        }

        .item {
            margin-bottom: 5px;
        }

        .total {
            text-align: right;
            margin-top: 10px;
            font-weight: bold;
        }

        .receipt-info {
            margin-top: 20px;
        }

        /* Additional styles for payment options */
        .payment-options {
            width: 35%; /* Adjust the width as needed */
            border: 1px solid #000;
            padding: 10px;
        }

            .payment-options h4 {
                text-align: center;
                margin-bottom: 10px;
            }

            .payment-options label {
                display: block;
                margin-bottom: 10px;
            }

            .payment-options button {
                display: block;
                margin-top: 10px;
            }

        .success-button {
            background-color: #4CAF50; /* Green color */
            color: white;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 4px;
            cursor: pointer;
        }

        /* Styles for print media */
        @@media print {
            body {
                margin: 0;
            }

            .container {
                width: 100%;
                margin: 0;
                padding: 20px;
            }

            .receipt {
                width: 100%;
                border: 1px solid #000;
                padding: 10px;
            }

            .receipt-info {
                text-align: center;
                margin-top: 20px;
            }
        }
    </style>
</head>
<body>
    <br />
    <br />
    <br />
    <br />
    <br />

    <div class="container">
        <div class="receipt">
            <div class="header">Restaurant Receipt</div>

            <div class="order-number">Order Number: @Model.OrderNumber</div>

            @foreach (var product in Model.Products)
            {
                <div class="item">
                    <span>@product.ProductName</span>
                    <span style="float:right;">@product.Total</span>
                    <br />
                    <span>Quantity: @product.Qty</span>
                </div>
            }

            <div class="total">Total: @Model.TotalAmount</div>
            <div class="item">Payment Method: @Model.PaymentMethod</div>


            <div class="receipt-info">
                <p>Thank you for dining with us!</p>
                <p>Date: @DateTime.Now.ToString("MM/dd/yyyy hh:mm tt")</p>
            </div>
        </div>

        <div class="payment-options">
            <form action="@Url.Action("UpdatePaymentMethod", "Home")" method="post">
                <input type="hidden" name="orderNumber" value="@Model.OrderNumber" />

                <h4>Select Payment Method:</h4>
                <label><input type="radio" name="paymentMethod" value="Cash" /> Cash</label>
                <label><input type="radio" name="paymentMethod" value="Card" /> Card</label>

                <br />
                <button type="submit" class="success-button">Submit Payment</button>
            </form>
            <button type="button" onclick="printBill()" class="success-button">Print Bill</button>
        </div>
    </div>
    <script>
        function printBill() {
            var printContents = document.querySelector('.receipt').innerHTML;
            var originalContents = document.body.innerHTML;

            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
        }
    </script>
</body>
</html>

