@model ShoppingCartMVC.Models.Drivers

<head>
    <title>Driver Order Collection</title>
    <style>
        .card {
            border: 2px solid #0094ff;
        }
    </style>
</head>



@using (Html.BeginForm("DriverGetOrder", "Home", FormMethod.Post))
{

    <div class="col-lg-10 grid-margin stretch-card mx-auto">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title" style="text-align:center"><u>Order Collection For Delivery</u></h4>
                <br />
                <p class="card-description">
                    Customer Order No : <b>#@Html.DisplayFor(m => Model.OrderId) </b>
                </p>
                <br />

                @*table for showing order details*@
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Unit Price</th>
                                <th>Qty</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td>
                                    @Html.DisplayFor(m => Model.TblOrder.TblProduct.P_Name)
                                </td>
                                <td>
                                    R  @Html.DisplayFor(m => Model.TblOrder.Unit).00
                                </td>
                                <td>
                                    @Html.DisplayFor(m => Model.TblOrder.Qty)
                                </td>
                                <td>
                                    R @Html.DisplayFor(m => Model.TblOrder.Total).00
                                </td>

                            </tr>

                        </tbody>
                    </table>
                </div>
                <br />
                <p><input type="checkbox" id="OrderCollected" name="OrderCollected" value="true" required /> Order Collected</p>


                <br />
                <input type="submit" value="Directions" class="btn btn-info" />
               
            </div>
        </div>
    </div>
}
