@model List<ShoppingCartMVC.Models.tblReservation>

@{
    ViewBag.Title = "TrackReservations";
}


<style>
    /* Style for the parent container */
    .container {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    /* Style for the left container */
    .left-container {
        flex: 1;
        background-color: #f2f2f2;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    /* Style for the right container */
    .right-container {
        flex: 1;
        background-color: #f2f2f2;
        padding: 20px; /* Adjust padding as needed */
        border: 1px solid #ddd;
        border-radius: 15px;
        margin-left: -50px;
    }


    /* Style for the table */
    table {
        width: 100%;
        border-collapse: collapse;
    }

    /* Style for table headers */
    th {
        background-color: #ddd;
        text-align: left;
    }

    /* Style for table cells */
    td {
        border: 1px solid #ddd;
        padding: 8px;
    }

    .card {
        border: 2px solid green;
    }
</style>

<div class="container">
    <!-- Right Container -->
    <div class="right-container" style="order: 1; width: 200%; margin-right: 80px;">
        <h3>Generate Output</h3>
        <form action="@Url.Action("GenerateOutput", "Home")" method="post">
            <label for="date">Select Date:</label>
            <input type="date" id="date" name="date" required>
            <br>
            <br />
            <br />
            <button type="submit" class="btn btn-success" style="width: 100%;">Display</button>
        </form>
        <br />
        <form action="/Home/OpenTable" method="post">
            <button type="submit" class="btn btn-success" style="width: 100%;">Reserve Table</button>
        </form>
        <!-- Display reservations for the selected date here -->
        <div class="output-box">
            @if (ViewBag.SelectedDateReservations != null)
            {
                <h3>Reservations for Selected Date</h3>
                <ul>
                    @foreach (var reservation in ViewBag.SelectedDateReservations)
                    {
                        <li>@reservation.Customer_Name - @reservation.Date.ToShortDateString()</li>
                    }
                </ul>
            }
        </div>
    </div>

    <!-- Left Container -->
    <div class="left-container" style="order: 2;">
        <h3>All Reservations</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>BookingID</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Customer Name</th>
                    <th>Email</th>
                    <th>Number</th>
                    <th>Seating</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reservation in Model)
                {
                    <tr>
                        <td>@reservation.BookingId</td>
                        <td>

                            @if (reservation.Date.HasValue)
                            {
                                @reservation.Date.Value.ToShortDateString()
                            }
                        </td>
                        <td>
                            @(reservation.Time.HasValue ? reservation.Time.Value.ToString("hh:mm tt") : string.Empty)
                        </td>
                        <td>@reservation.Customer_Name</td>
                        <td>@reservation.Mail</td>
                        <td>@reservation.Number</td>
                        <td>@reservation.Seating</td>
                        <td>
                            <a href="@Url.Action("CompleteReservation", "Home", new { bookingId = reservation.BookingId })" class="btn btn-danger">Complete</a>


                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>

