@model List<ShoppingCartMVC.Models.tblReservation>

@{
    ViewBag.Title = "TrackReservations";
}

<h2>Track Reservations</h2>

<style>
    /* Style for the parent container */
    .container {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    /* Style for the left container */
    .left-container {
        flex: 1;
        margin-right: 20px;
    }

    /* Style for the right container */
    .right-container {
        flex: 1;
        padding: 20px;
        background-color: #f2f2f2;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    /* Style for the "Generate Output" form */
    form {
        margin-bottom: 20px;
    }

    /* Style for the "Reservations for Selected Date" box */
    .output-box {
        background-color: #fff;
        border: 1px solid #ddd;
        padding: 10px;
        border-radius: 5px;
    }

        /* Style for the list inside the "Reservations for Selected Date" box */
        .output-box ul {
            list-style-type: none;
            padding: 0;
        }

        /* Style for list items in the "Reservations for Selected Date" box */
        .output-box li {
            margin-bottom: 5px;
        }
</style>

<div class="container">
    <!-- Left Container -->
    <div class="left-container">
        <h3>All Reservations</h3>
        <ul>
            @foreach (var reservation in Model)
            {
                <li>@(reservation.Date.HasValue ? reservation.Date.Value.ToShortDateString() : "N/A")</li>
            }
        </ul>
    </div>

    <!-- Right Container -->
    <div class="right-container">
        <h3>Generate Output</h3>
        <form action="@Url.Action("GenerateOutput", "Home")" method="post">
            <label for="date">Select Date:</label>
            <input type="date" id="date" name="date" required>
            <br>
            <input type="submit" value="Display Reservations for Date">
        </form>

        <!-- Display reservations for the selected date here -->
        <div class="output-box">
            @if (ViewBag.SelectedDateReservations != null)
            {
                <h3>Reservations for Selected Date</h3>
                <ul>
                    @foreach (var reservation in ViewBag.SelectedDateReservations)
                    {
                        <li>@reservation.Customer_Name - @reservation.Date.ToShortDateString()</li>
                    }
                </ul>
            }
        </div>
    </div>
</div>

